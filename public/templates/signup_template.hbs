<div class="modal-dialog ">
         <div class="modal-content">
          
         <button type="button" class="close " data-dismiss="modal" aria-hidden="true">
         </button>
         <div class="modal-header" >
         <div class="col-sm-3 col-xs-12">
            {{#when type 'eq' 'signup'}} <h3>Signup</h3>{{else}} <h3>Signin</h3>{{/when}} 
         </div>
         
            {{#if messageobj}} 
              {{#when messageobj.messagetype 'eq' 'success'}}

                <div class="col-sm-9" ><h4><span class="label label-success" style='font-size:medium'>{{messageobj.message}}</span></h4></div>
              {{else}}
                <div class="col-sm-9" ><h4><span class="label label-danger" style='font-size:medium'>{{messageobj.message}}</span></h4></div>

              {{/when}}
            
            {{/if}}
         
       
        
         
          </div>
         
           
         
         <div class="modal-body">
         
             <form role="form" class="form-horizontal ">
                            {{#when type 'eq' 'signup'}} 
                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">
                                    Name</label>
                                <div class="col-sm-10 ">
                                 <div class="row">
                
         
                                  <div class="col-sm-6 col-xs-6"><input type="text" class="form-control" name='firstname' placeholder="First Name" /></div>
                                  <div class="col-sm-6 col-xs-6">
                                       <input type="text" class="form-control " name='lastname' placeholder="Last Name" />
                                  </div>
                                
                                       </div>
                                  
                                </div>
                            </div>

                            {{/when}}
                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">
                                    Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" name='email' placeholder="Email" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1" class="col-sm-2 control-label">
                                    Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name='password' placeholder="*******" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-10">
                                    {{#when type 'eq' 'signup'}}  
                                    <button  class="btn btn-primary col-sm-12 register col-xs-12" style="margin-bottom:7px">
                                        Signup</button>
                                        <a href="#" class="signup" data-type='signin'  style="color:gray;">Already User?</a>
                                    {{else}} 
                                      <button  class="btn btn-primary col-sm-12 login col-xs-12" style="margin-bottom:7px">
                                        Login</button>
                                        <a href="#" class="signup" data-type='signup'  style="color:gray">Register ? </a>
                                         <a href="#" class="signup" data-type='signin' data-forgot='yes' style="color:gray">Forgot Your Password ? </a>
                                         {{#if forgot}}
                                         <hr>
                                         <div>
                                         
                                            <input type="email" class="form-control forgotmail"   placeholder="Enter your email" style="margin-bottom:10px" />
                                            <button class="btn btn-primary col-sm-12 col-xs-12 forgotpassword">Request To Password Change</button>
                                           
                                           
                                         </div>
                                         {{/if}}
                                     {{/when}}
                                    <div>
                                       <div class="col-sm-5 col-xs-5"><hr></div>
                                       <div class="col-sm-2 col-xs-2 " style="text-align: center;padding-top: 10px;padding-left:0px;"><b>OR</b></div>
                                       <div class="col-sm-5 col-xs-5"><hr></div>
                                    </div>
                                    <div style="text-align: center">
                                       <a href="/auth/facebook" class="btn " style="background-color:#3b5998;color:white" target="_top"><span class="fa fa-facebook"></span> Facebook</a>&nbsp;&nbsp;
                                       <a href="/auth/google" class="btn btn-danger " style="color:white" target="_top"><span class="fa fa-google "></span> Google</a>
                                    </div>
                                    
                                </div>
                            </div>
                            </form>
            </div>
         </div>
         </div>
         </div>