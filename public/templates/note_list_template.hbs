<div class="row  visible-xs" style="position: fixed; top: 51px; width: 100%;text-align:center;z-index:1" >
    <label class="btn btn-default filternotes " style="width: 100%; height: 31px;">
        {{filtertext}}
        <span style="font-size:medium"> <i class="fa fa-sort-down "></i></span>
    </label>
</div>
<div class='row hidden-xs' style="background:snow;width:100%;z-index:1;position:fixed;top:58px">
 
  <div class="col-sm-5 {{#if User}}{{else}}hide{{/if}}">
    <label class="col-sm-2 control-label">Label</label>
    <div class="col-sm-10">
         <select class="form-control selectpicker" multiple>
    
      
       {{#each User.labels}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    </div>
   
 </div>
  <div class="col-sm-5">
   <label class="col-sm-3 control-label">SortBy</label>
   <div class="col-sm-9">
    <select class="form-control selectsort" >
      
      <option value="modifiedtime" {{#when sortByText 'eq' 'modifiedtime'}}selected{{/when}}>Latest Modifed Note</option>
      <option value="createdtime" {{#when sortByText 'eq' 'createdtime'}}selected{{/when}}>Latest Created Note</option>
      <option value="alphabet" {{#when sortByText 'eq' 'alphabet'}}selected{{/when}}>Note A to Z</option>
      <option value="reminder" {{#when sortByText 'eq' 'reminder'}}selected{{/when}}> Latest Reminder</option>
    
    </select> 
   </div>
 
 </div>
</div>
<div class="row visible-xs " id="notes" style='margin-top:74px'>

    {{#each notes}}
     <div class="note col-xs-6 col-sm-4 img-responsive hide"  {{#if isTodayReminder}}style="border-right-color: green; border-right-style: solid; border-right-width: medium;" {{/if}}>

        <div class="{{#if ../isMobile}}noteedit{{/if}}" style="color:black;{{#if ../isMobile}}min-height: 150px {{/if}}" data-id='{{_id}}' href='#'>
            <span style="font-weight:600;">{{subject}}</span>


            <p class="visible-xs" style="font-family: monospace;overflow-x:auto">
                {{#if content}}{{trimString content 50}} ..........{{/if}}
            </p>
            <p class="hidden-xs" style="font-family: monospace;overflow-x:auto">
                {{#if content}}{{trimString content 120}} ..........{{/if}}

            </p>
        </div>
        <div class="note-label">

            <span class="col-sm-6 col-xs-6 label label-primary">{{label}}</span>

            <div class="col-sm-6 col-xs-6 ">
                <a href='#' class="share fa fa-share" data-id='{{_id}}' style="padding-left:20px;color:black;padding-top:0px"> </a>
            </div>

        </div>

        <div class="note-operations" {{#if ../isMobile}}style='margin-left:5px' {{/if}}>
            {{#if ../isMobile}}
            <a class="delete" href="javascript:void(0)"><span class="glyphicon glyphicon-trash deleteicon" id='userdelete' data-id='{{_id}}'></span></a> {{else}}

            <a class="noteedit" href="javascript:void(0)" data-id='{{_id}}'><span class="glyphicon glyphicon-pencil" style='font-size: 15px;color:navy'  '></span></a>

            <a class="delete" href="javascript:void(0)" style=""><span class="glyphicon glyphicon-trash deleteicon" id='userdelete' data-id='{{_id}}'></span></a> {{/if}}
        </div>
    </div>
    <div class=" col-xs-12 col-sm-4 mobilenote ff" >
        <div class="panel ">

            <div style="float:right" class='panel-heading'>
                {{#if reminder}}

                <a href="#" style="padding-right:40px;color:green"><i class="fa fa-clock-o" aria-hidden="true"></i> {{getLocaleTime reminder}}</a> {{/if}}




                <div class="label label-primary" style="font-size:small;">{{label}}</div>

            </div>


            <div class="panel-body noteedit " data-id='{{_id}}' style="margin-top:20px">
                {{#if showImage}}
                <div class="col-sm-4 col-xs-4" style="padding-left:0px">
                    <img src="{{showImage}}" class="img img-responsive">
                </div>
                {{/if}}
                <div class="{{#if showImage}}col-sm-8 col-xs-8{{/if}}" style="">
                    <h4>{{subject}}</h4>
                </div>



            </div>
            <div class="panel-footer">
                <div class="row">
                    <span class="col-xs-4 noteedit " style="text-align:center;border-right-style:groove" data-id='{{_id}}'>
                        <a class="" href="javascript:void(0)" ><i class="fa fa-eye"></i></a>  View
                    </span>
                    <span class="col-xs-4 share" style="text-align:center" data-id='{{_id}}'>
                       <a href='#' class="fa fa-share"  style="color:black"></a>  Share 
                    </span>
                    <span class="col-xs-4 deletenote" style="text-align:center;border-left-style:groove" id='userdelete' data-id='{{_id}}'>
                       <a class=" glyphicon glyphicon-trash deleteicon" href="javascript:void(0)"  ></a>  Delete

                    </span>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
